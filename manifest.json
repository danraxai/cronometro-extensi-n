{
  "manifest_version": 3,
  "name": "Cronómetro",
  "version": "1.0",
  "description": "Un cronómetro siempre visible con botones de iniciar, pausar y parar.",
  "permissions": ["storage", "activeTab", "tabs", "background"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
